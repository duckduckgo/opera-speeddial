<?xml version="1.0" encoding="utf-8"?>

<widget xmlns="http://www.w3.org/ns/widgets" id="http://duckduckgo.com" defaultlocale="en" viewmodes="minimized">
    <name short="DuckDuckGo">DuckDuckGo - Zero-click Info</name>
    <description>Shows random zero-click info from DuckDuckGo.</description>
    <author href="http://duckduckgo.com">DuckDuckGo</author>
    <icon src="images/icon_64.png"/>
    <feature name="opera:speeddial" required="true">
        <param name="url" value="http://duckduckgo.com" />
    </feature>
    <access origin="http://wikipedia.org" subdomains="true" />
    <access origin="http://duckduckgo.com" subdomains="true" />
</widget>
